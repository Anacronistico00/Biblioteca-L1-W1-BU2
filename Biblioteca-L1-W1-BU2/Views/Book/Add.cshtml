@model AddBookViewModel

@{
    ViewData["Title"] = "Aggiungi libro";
}

<h1>Aggiungi un nuovo libro</h1>

<form asp-controller="Book" asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="mb-2">
        <label for="Title" class="form-label">Titolo</label>
        <input type="text" class="form-control" id="Title" name="Title" required>
    </div>
    <div class="mb-2">
        <label for="Author" class="form-label">Autore</label>
        <input type="text" class="form-control" id="Author" name="Author" required>
    </div>
    <div class="mb-2">
        <label for="Genre" class="form-label">Genere</label>
        <input type="text" class="form-control" id="Genre" name="Genre" required>
    </div>
    <div class="mb-2">
        <label for="CoverPath" class="form-label">Carica una copertina dai file</label>
        <input type="file" class="form-control" id="CoverPath" name="CoverPath">
    </div>
    <div class="mb-2">
        <label for="Available" class="form-label">Disponibile al prestito?</label>
        <select class="form-select" id="Disponibile" name="Available" required>
            <option value="true">Si</option>
            <option value="false">No</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Aggiungi</button>
</form>
    
